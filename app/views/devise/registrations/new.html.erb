<div class="tab-pane" id="signup">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal top-30-margin" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username, class: "col-sm-2 control-label", for: "inputEmail3" %>
      <div class="col-sm-10 input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-user"></span>
        </span>
        <%= f.text_field :username, :autofocus => true, class: "form-control", id: "inputEmail3", placeholder:"Username" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 control-label", for: "inputEmail3" %>
      <div class="col-sm-10 input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-envelope"></span>
        </span>
        <%= f.email_field :email, class: "form-control", id: "inputEmail3", placeholder:"Email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-2 control-label", for: "inputPassword3" %>
      <div class="col-sm-10 input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-asterisk"></span>
        </span>
        <%= f.password_field :password, class: "form-control", id: "inputPassword3", placeholder:"Password" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :'confirm password', class: "col-sm-2 control-label", for: "inputPassword3" %>
      <div class="col-sm-10 input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-asterisk"></span>
        </span>
        <%= f.password_field :password_confirmation, class: "form-control", id: "inputPassword3", placeholder:"Password" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign up", class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
