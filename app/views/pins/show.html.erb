<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <p>
        <%= image_tag @pin.image(:large) %>
      </p>
      <p>
        <%= @pin.description %>
      </p>
      <p>
        <%= @pin.user.username %>
      </p>
      <% if current_user == @pin.user %>
        <%= link_to 'Edit', edit_pin_path(@pin) %> |
      <% end %>
      <%= link_to 'Back', pins_path %>    
    </div>
  </div>
</div>

