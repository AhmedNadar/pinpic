<%= simple_form_for(@pin) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-danger" %>
  <%= f.full_error :image_content_type, class: "alert alert-danger" %>

  <div class="form-group">
      <%= f.input :image, label: "Upload an image" %>
      <%= f.input :description, as: :text, input_html: {rows: "3", class: "form-control"} %>
  </div>

    <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

